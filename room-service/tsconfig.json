{
  "include": [
    "src/**/*",
    "environment.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compileOnSave": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    /* Specify what JSX code is generated. */
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    // "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "es6",
    "skipLibCheck": true,
    "types": [
      "node",
      "./worker-configuration.d.ts"
    ]
  }
}

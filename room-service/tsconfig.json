{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2021",
    "lib": ["es2021"],
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "outDir": "es6",
    "skipLibCheck": true,
    "types": ["node", "./worker-configuration.d.ts"]
  },
  "include": ["src/**/*", "environment.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "types": ["node"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "es6",
    "strict": true,
    "sourceMap": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
